# Install and load required package
if (!require(lhs)) install.packages("lhs")
library(lhs)
# Set seed for reproducibility
set.seed(123)
# Generate a Latin Hypercube Sample
# Let's create 20 samples for 2 variables
n_samples <- 20
n_variables <- 2
lhs_sample <- randomLHS(n_samples, n_variables)
# Scale the samples to a specific range
# Let's say variable 1 ranges from 0 to 10
# and variable 2 ranges from -5 to 5
scaled_samples <- data.frame(
x = lhs_sample[,1] * 10,  # Scale to [0, 10]
y = lhs_sample[,2] * 10 - 5  # Scale to [-5, 5]
)
# Create a visualization
plot(scaled_samples$x, scaled_samples$y,
main = "Latin Hypercube Sampling Demonstration",
xlab = "Variable 1 [0 to 10]",
ylab = "Variable 2 [-5 to 5]",
pch = 16,
col = "blue")
# Add grid lines to show the Latin Hypercube structure
abline(h = seq(-5, 5, length.out = n_samples + 1), col = "gray", lty = 2)
abline(v = seq(0, 10, length.out = n_samples + 1), col = "gray", lty = 2)
